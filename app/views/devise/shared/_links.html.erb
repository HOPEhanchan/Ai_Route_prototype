<div class="space-y-2">
  <% if controller_name != 'sessions' %>
    <div>
      <%= link_to t("devise.sessions.new.sign_in"),
                  new_session_path(resource_name),
                  class: "text-sm text-emerald-500 hover:text-emerald-600" %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to t("devise.sessions.sign_up", default: "新規登録"),
                  new_registration_path(resource_name),
                  class: "text-sm text-emerald-500 hover:text-emerald-600" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <div>
      <%= link_to t("devise.sessions.forgot_your_password?",
                    default: "パスワードをお忘れの方はこちら"),
                  new_password_path(resource_name),
                  class: "text-xs text-gray-500 hover:text-gray-700" %>
    </div>
  <% end %>
</div>
