<div class="max-w-3xl mx-auto px-4 py-6">
  <div class="mb-4">
    <%= link_to "← 一覧に戻る",
          admin_contact_messages_path,
          class: "text-xs text-gray-500 hover:text-gray-700" %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <h1 class="text-lg font-semibold text-gray-800">
      お問い合わせ詳細
    </h1>
  </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
      <div>
        <p class="text-gray-500">名前</p>
        <p class="font-medium text-gray-800"><%= @contact_message.name %></p>
      </div>

      <div>
        <p class="text-gray-500">メールアドレス</p>
        <%= mail_to @contact_message.email,
              @contact_message.email,
              subject: "Re: #{@contact_message.subject}",
              body: "お問い合わせありがとうございます。\n\n---\n#{@contact_message.body}\n---\n",
              class: "font-medium text-emerald-700 hover:underline" %>
      </div>

      <div>
        <p class="text-gray-500">件名</p>
        <p class="font-medium text-gray-800"><%= @contact_message.subject %></p>
      </div>

      <div>
        <p class="text-gray-500">受信日時</p>
        <p class="font-medium text-gray-800">
          <%= l(@contact_message.created_at, format: :long) %>
        </p>
      </div>
    </div>

    <div class="pt-4 border-t border-slate-200">
      <p class="text-gray-500 text-sm mb-1">本文</p>
      <div class="whitespace-pre-wrap text-sm text-gray-800 bg-slate-50 rounded-lg p-4 border border-slate-200">
        <%= @contact_message.body %>
      </div>
    </div>

    <div class="mt-6 pt-4 border-t border-slate-200">
      <%= button_to "このお問い合わせを削除する",
          admin_contact_message_path(@contact_message),
          method: :delete,
          data: { turbo_confirm: "このお問い合わせを削除していい？（戻せません）" },
          class: "w-full px-4 py-3 rounded-lg bg-red-600 text-white text-sm font-medium hover:bg-red-700" %>
    </div>
  </div>
</div>
